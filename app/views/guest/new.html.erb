<h1>New Guest</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@guest) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>

      <%= f.submit "Submit my info", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
